{
    "manifest_version": 2,
    "name": "La Voz - Noticias Libres",
    "short_name": "LaVozLibre",
    "version": "1.0.1",
    "description": "Esta extensi√≥n permite ver las noticias de la Voz del Interior sin estar logueado",
    "author": "Miguel Ovejero",
    "homepage_url": "https://github.com/miguelovejero/LaVozNoticiasLibres",

    "permissions": [
        "webRequest",
        "webRequestBlocking",
        "http://*/*",
        "https://*/*",
        "storage"
    ],
    "icons": {
        "16": "images/icon16.png",
        "128": "images/icon128.png"
    },
    "background": {
        "persistent": true,
        "scripts": ["blocker.js"]
    },
    "browser_action": {
        "default_title": "La Voz - Noticias Libres",
        "default_icon": {
            "16": "images/icon16.png",
            "128": "images/icon128.png"
        },
        "default_popup": "popup.html"
    }
}
